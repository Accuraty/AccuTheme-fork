{
  "name": "CLIENT_CODE",
  "version": "1.0.0",
  "description": "Skin scaffolding for Accuraty projects",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css-main": "npm-run-all --parallel css-lint css-compile --sequential css-prefix css-minify",
    "css-lint": "stylelint assets/sass/**/*.scss",
    "css-compile": "npm-run-all --parallel compile:* --silent",
    "compile:Skin": "node-sass --output-style nested --source-map true --source-map-contents true --precision 6 assets/sass/Skin.scss ./Skin.css",
    "compile:Home": "node-sass --output-style nested --source-map true --source-map-contents true --precision 6 assets/sass/Home.scss ./Home.css",
    "compile:Manage": "node-sass --output-style nested --source-map true --source-map-contents true --precision 6 assets/sass/Manage.scss ./Manage.css",
    "compile:Aside": "node-sass --output-style nested --source-map true --source-map-contents true --precision 6 assets/sass/Aside.scss ../../Containers/$npm_package_name/Aside.css",
    "compile:EasyDNNnews": "node-sass --output-style nested --source-map true --source-map-contents true --precision 6 assets/sass/EasyDNNnews.scss ../../../../DesktopModules/EasyDNNnews/Templates/_default/$npm_package_name/$npm_package_name.css",
    "css-prefix": "npm-run-all --parallel prefix:*",
    "prefix:assets": "postcss --config postcss.config.js \"./assets/css/*.css\" --base \"./assets/css/\" --dir \"./assets/css/\"",
    "prefix:Skin": "postcss --config postcss.config.js \"./*.css\" --base \"./\" --dir \"./\"",
    "prefix:Containers": "postcss --config postcss.config.js \"../../Containers/$npm_package_name/*.css\" --base \"../../Containers/$npm_package_name/\" --dir \"../../Containers/$npm_package_name/\"",
    "prefix:EasyDNNnews": "postcss --config postcss.config.js \"../../../../DesktopModules/EasyDNNnews/Templates/_default/$npm_package_name/*.css\" --base \"../../../../DesktopModules/EasyDNNnews/Templates/_default/$npm_package_name/\" --dir \"../../../../DesktopModules/EasyDNNnews/Templates/_default/$npm_package_name/\"",
    "css-minify": "npm-run-all --parallel minify:*",
    "minify:assets": "foreach --glob \"./assets/css/*.css\" --execute \"cleancss --level 1 --source-map --source-map-inline-sources #{path} --output #{path}\"",
    "minify:Skin": "foreach --glob \"./*.css\" --execute \"cleancss --level 1 --source-map --source-map-inline-sources #{path} --output #{path}\"",
    "minify:Containers": "foreach --glob \"../../Containers/$npm_package_name/*.css\" --execute \"cleancss --level 1 --source-map --source-map-inline-sources #{path} --output #{path}\"",
    "minify:EasyDNNnews": "foreach --glob \"../../../../DesktopModules/EasyDNNnews/Templates/_default/$npm_package_name/*.css\" --execute \"cleancss --level 1 --source-map --source-map-inline-sources #{path} --output #{path}\"",
    "build": "npm-run-all --parallel css-main",
    "start": "nodemon --watch assets/sass/ --ext scss --exec \"npm-run-all --parallel css-lint css-compile\""
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrismlusk/accuraty-templates.git"
  },
  "author": "Chris Lusk",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.2.1",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.6"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.5",
    "clean-css-cli": "^4.2.1",
    "foreach-cli": "^1.8.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.13",
    "postcss-cli": "^6.1.1",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.0",
    "uglify-js": "^3.4.3"
  }
}
