{
  "name": "skin-template",
  "version": "1.0.0",
  "description": "Skin scaffolding for Accuraty projects",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "css-main": "npm-run-all --parallel css-lint css-compile-skin --sequential css-prefix css-minify",



    "css-lint": "stylelint --syntax scss \"assets/sass/**/*.scss\"",

    "css-compile-skin": "node-sass --output-style nested --source-map true --source-map-contents true --precision 6 assets/sass/*.scss --output ./*.css",



    "css-prefix": "postcss --config postcss.config.js --replace \"*.css\" \"*.min.css\"",

    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output *.min.css *.css",



    "start-dev": "npm-run-all --parallel css-main"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrismlusk/accuraty-templates.git"
  },
  "author": "Chris Lusk",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "postcss": "^7.0.5",
    "stylelint": "^9.6.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.3.1",
    "uglify-js": "^3.4.3"
  }
}
